{% extends 'base.html.twig' %}

{% block main_body %}

    <style>
        .login-container{
            width: 400px;
            padding: 20px;
            margin: auto;
            margin-top: 50px;
            border: solid 1px #cccbcb;
            border-radius: 2px;
            background-color: #f8f8f8;
        }
        .login-container hr{
            margin-top: 10px;
            margin-bottom: 10px;
            border: 0;
            border-top: 1px solid #d4d0d0;
        }
    </style>

    <div class="login-container">
        <h3 style="text-align: center;">Authentification</h3>
        <hr>
        {% if error %}
            <div class="alert alert-danger">
                <span class="glyphicon glyphicon-warning-sign"></span> {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">

            <div class="form-group">
                <label for="username">Email</label>
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                    <input value="{{ last_username }}" class="form-control" name="_username" id="username" placeholder="@Email">
                </div>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>

                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                    <input class="form-control" name="_password" id="password" type="password" placeholder="Mot de passe">
                </div>
            </div>

            <button class="btn btn-primary btn-block" type="submit"><span class="glyphicon glyphicon-log-in"></span> Connexion</button>
        </form>
    </div>



{% endblock %}
{% extends '@App/Campaign/index.html.twig' %}

{% block title %}
    Ajouter une campagne
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        <a href="">Ajout d'une campagne</a>
    </li>
{% endblock %}

{% block top_right_block %}
  <a href="{{ path('list_campaign') }}"><span class="glyphicon glyphicon-chevron-left"></span> Retour Ã  la liste des campagnes</a>
{% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div class="row">
        <div class="col-xs-12 col-md-4">
            {{ form_row(form.name) }}
        </div>
        <div class="col-xs-12 col-md-4">
            {{ form_row(form.session) }}
        </div>
        <div class="col-xs-12 col-md-4">
            {{ form_row(form.date) }}
        </div>
        <div class="col-xs-12 col-md-4">
            {{ form_row(form.universities) }}
        </div>
        <div class="col-xs-12 col-md-4">
            {{ form_row(form.status) }}
        </div>
        <div class="col-xs-12 col-md-4">
            {{ form_row(form.candidates,{'label':'Liste des candidats (csv)'}) }}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-8 col-md-2 col-md-offset-10">
            <button type="submit" class="btn btn-success btn-block">
                <span class="glyphicon glyphicon-ok"></span> Enregistrer
            </button>
        </div>
    </div>

    {{ form_end(form) }}


{% endblock %}
